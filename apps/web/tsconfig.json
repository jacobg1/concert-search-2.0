{
  "extends": "@repo/ts-config/nextjs.json",
	"compilerOptions": {
		"noEmit": true,
		"incremental": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
		"noUncheckedIndexedAccess": false,
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app/**/*",
    "build/types/**/*.ts",
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
