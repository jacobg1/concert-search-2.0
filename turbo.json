{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["lint", "^build"],
			"outputs": [".next/**", "!.next/cache/**", "build/**"]
		},
		"build:watch": {
			"persistent": true,
			"cache": false
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"dependsOn": ["^build:watch"],
			"persistent": true,
			"cache": false
		},
		"start": {
			"dependsOn": ["build"]
		}
	}
}
