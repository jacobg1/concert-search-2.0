{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "start": {
      "dependsOn": ["build"]
    },
    "build": {
      "dependsOn": ["lint", "^build"],
      "outputs": [".next/**", "!.next/cache/**", "build/**"]
    },
    "build:watch": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "deploy": {
      "dependsOn": ["test", "build"]
    },
    "deploy:test": {
      "dependsOn": ["test", "build"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:watch": {
      "persistent": true,
      "cache": false
    }
  }
}
